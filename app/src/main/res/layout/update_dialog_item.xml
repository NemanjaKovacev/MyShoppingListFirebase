<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/UpdateDialogStyle">

    <LinearLayout
        style="@style/LinearLayoutDialogInputs"
        android:baselineAligned="false">

        <android.support.design.widget.TextInputLayout
            style="@style/ItemTextInputLayoutStyle"
            android:layout_weight="6">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextItemNameUpdate"
                style="@style/ItemNameTextInputStyle"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/ItemTextInputLayoutStyle"
            android:layout_marginTop="@dimen/text_input_edit_text_margin_top"
            android:layout_weight="2">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextAmount"
                style="@style/ItemAmountTextInputStyle"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutHorizontal">

        <Button
            android:id="@+id/buttonUpdateItem"
            style="@style/ButtonDialogStyle"
            android:text="@string/update_item"/>

        <Button
            android:id="@+id/buttonDeleteItem"
            style="@style/ButtonDialogStyle"
            android:text="@string/delete_item"/>

    </LinearLayout>

</LinearLayout>